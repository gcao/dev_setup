" Run external command in current line {
  function! RunThis()
    let s:cmd = substitute(getline("."), "^[#$\"]", "", "")
    echo s:cmd
    if s:cmd != ""
      let s:vimCmd = matchstr(s:cmd, 'vim \zs.*')
      if s:vimCmd != ""
        exec s:vimCmd
      else
        exec '!rr "' . s:cmd . '"'
      end
    else
      echo "No command found in line."
    endif
  endfunction
  map <F4> :call RunThis()<CR>
  map <F5> :source %<CR>
" }

